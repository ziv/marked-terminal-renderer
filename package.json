{
  "name": "marked-terminal-renderer",
  "version": "1.1.5",
  "description": "marked terminal renderer",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "keywords": [
    "marked",
    "extension",
    "cli",
    "terminal",
    "tty",
    "md",
    "markdown"
  ],
  "scripts": {
    "test": "jest",
    "test:cover": "jest --coverage",
    "format": "eslint --fix src/*.ts && prettier --write src/*.ts",
    "lint": "eslint src/*.ts",
    "build": "rm -rf lib && tsc && rollup -c rollup.config.esm.js",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ziv/marked-terminal-renderer.git"
  },
  "author": "Ziv Perry",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ziv/marked-terminal-renderer/issues"
  },
  "homepage": "https://github.com/ziv/marked-terminal-renderer#readme",
  "peerDependencies": {
    "marked": "2.0.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "@types/jest": "^26.0.24",
    "@types/marked": "^2.0.3",
    "@types/node": "^16.3.1",
    "@types/node-emoji": "^1.8.1",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "jest-cli": "^27.0.4",
    "marked": "^2.1.3",
    "prettier": "^2.3.2",
    "rollup": "^2.52.7",
    "semantic-release": "^17.4.4",
    "ts-jest": "^27.0.3",
    "tslib": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "cli-highlight": "^2.1.11",
    "cli-table3": "^0.6.0",
    "node-emoji": "^1.10.0",
    "word-wrap": "^1.2.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "ignorePatterns": [
      "src/*.js",
      "src/*.js.map",
      "src/*.d.ts"
    ],
    "rules": {
      "@typescript-eslint/interface-name-prefix": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-unused-vars": "off"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
